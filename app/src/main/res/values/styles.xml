<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="feedImageStyle">
        <item name="android:layout_width">@dimen/image_dimen</item>
        <item name="android:layout_height">@dimen/image_dimen</item>
        <item name="android:layout_marginEnd">@dimen/spacing</item>
        <item name="android:contentDescription">@string/feed_image</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="likeButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:layout_marginTop">@dimen/spacing</item>
        <item name="android:textSize">@dimen/text_size_very_small</item>
    </style>

    <style name="TextviewSingleLineSmallStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="textviewThreeLinedMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:transitionName">text</item>
    </style>

    <style name="headerTextviewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">100</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
